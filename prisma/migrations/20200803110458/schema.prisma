// Service Kiosk's Prisma Schema

datasource db {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  CLIENT
  TECHNICIAN
}

model User {
  id                Int      @id @default(autoincrement())
  document          Int
  firstName         String
  lastName          String
  email             String   @unique
  password          String
  clientTickets     Ticket[] @relation(name: "TicketClient")
  technicianTickets Ticket[] @relation(name: "TicketTechnician")
  role              UserRole
}

enum TicketType {
  MAINTENANCE
  INSTALLATION
  WARRANTY
}

enum TicketStatus {
  ASSIGNED
  IN_PROGRESS
  FINISHED
}

model Ticket {
  id           String       @id @default(cuid())
  date         DateTime
  updatedAt    DateTime     @updatedAt
  clientId     Int
  technicianId Int
  client       User         @relation(name: "TicketClient", fields: [clientId], references: [id])
  technician   User         @relation(name: "TicketTechnician", fields: [technicianId], references: [id])
  rating       Int?
  ratingExtra  String?
  status       TicketStatus
  type         TicketType
}

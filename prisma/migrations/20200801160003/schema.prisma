// Service Kiosk's Prisma Schema

datasource db {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id String @id @default(cuid())
  document Int
  name String
  lastName String
  email String @unique
  password String
  placedOrders Order[]
}

model Technician {
  id String @id @default(cuid())
  document Int
  name String
  lastName String
  email String @unique
  password String
  assignedOrders Order[]
}

enum OrderType {
  MANTEINANCE
  INSTALLATION
  WARRANTY
}

enum OrderStatus {
  CREATED
  ASSIGNATED
  IN_PROGRESS
  FINISHED
}

model Order {
  id String @id @default(cuid())
  date DateTime
  updatedAt DateTime @updatedAt
  clientId String
  client Client @relation(fields: [clientId], references: [id])
  technicianId String
  technician Technician @relation(fields: [technicianId], references: [id])
  rating Int?
  ratingExtra String?
  status OrderStatus
  type OrderType
}